<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Our Approach Menu -->
        <record id="menu_our_approach" model="website.menu">
            <field name="name">Our Approach</field>
            <field name="url">/our_approach</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>

        <!-- Solution Menu -->
        <record id="menu_solutions" model="website.menu">
            <field name="name">Solutions</field>
            <field name="url">/solutions</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">25</field>
        </record>

        <!-- Trainings Menu -->
        <record id="menu_trainings" model="website.menu">
            <field name="name">Trainings</field>
            <field name="url">/trainings</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">30</field>
        </record>

        <menuitem name="Page Views"
            id="menu_page_views"
            sequence="40"
            parent="website.menu_website_configuration"/>

    </data>
</odoo>
